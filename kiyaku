        let currentModal = null;
        
        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã®ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.doc-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.2 + 0.8}s`;
            });
            
            // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
            window.addEventListener('scroll', () => {
                const cards = document.querySelectorAll('.doc-card');
                cards.forEach(card => {
                    const cardTop = card.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    
                    if (cardTop < windowHeight * 0.8) {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0) rotateX(0)';
                    }
                });
            });
        });
        
        // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‹ãé–¢æ•°
        function openModal(type) {
            console.log('Opening modal:', type); // ãƒ‡ãƒãƒƒã‚°ç”¨
            
            // æ—¢ã«é–‹ã„ã¦ã„ã‚‹ãƒ¢ãƒ¼ãƒ€ãƒ«ãŒã‚ã‚Œã°é–‰ã˜ã‚‹
            if (currentModal) {
                closeModal(currentModal);
            }
            
            const modal = document.getElementById(`${type}-modal`);
            if (!modal) {
                console.error('Modal not found:', type);
                return;
            }
            
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            currentModal = type;
            
            // ãƒ¢ãƒ¼ãƒ€ãƒ«å†…ã®ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚’ä¸€ç•ªä¸Šã«
            const modalBody = modal.querySelector('.modal-body');
            if (modalBody) {
                modalBody.scrollTop = 0;
            }
        }
        
        // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹é–¢æ•°
        function closeModal(type) {
            console.log('Closing modal:', type); // ãƒ‡ãƒãƒƒã‚°ç”¨
            
            const modal = document.getElementById(`${type}-modal`);
            if (modal) {
                modal.classList.remove('active');
            }
            
            document.body.style.overflow = 'auto';
            currentModal = null;
        }
        
        // ãƒ¢ãƒ¼ãƒ€ãƒ«å¤–ã‚¯ãƒªãƒƒã‚¯ã§é–‰ã˜ã‚‹
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal')) {
                closeModal(currentModal);
            }
        });
        
        // ESCã‚­ãƒ¼ã§ãƒ¢ãƒ¼ãƒ€ãƒ«é–‰ã˜ã‚‹
        document.addEventListener('keydown', (e) => {
